FROM ruby:3.4.2-slim

RUN apt-get update -qq && apt-get install -y --no-install-recommends \
  build-essential \
  libssl-dev \
  ca-certificates \
  && rm -rf /var/lib/apt/lists/*

RUN gem install tapyrus -v "~> 0.3.9" --no-document

COPY irbrc /root/.irbrc

WORKDIR /app

CMD ["irb", "-r", "tapyrus"]
